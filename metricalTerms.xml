        <encodingDesc>
            <metDecl type="met" xml:id="hexameter" pattern="+n|+n|+n|+n|+n|+u" xml:lang="en">
                <p>Hexameter</p>
                <p xml:lang="es">Hexámetro</p>
                <metSym value="+">long syllable</metSym>
                <metSym value="-">short syllable</metSym>
                <metSym value="|">foot boundary</metSym>
                <metSym value="/">caesura</metSym>
                <metSym value="±">indifferens (long or short)</metSym>
                <metSym value="n">biceps (two short syllables or a long)</metSym>
                <metSym value="x">anceps (long or short or two shorts)</metSym>
            </metDecl>
            
            <metDecl type="met" xml:id="hexameter-anaxiformis" pattern="ln|ln|ln|ln|ln|lu" xml:lang="en">
                <p>Hexameter (anaxiformis notation)</p>
                <p xml:lang="es">Hexámetro (notación anaxiformis)</p>
                <metSym value="l">long syllable</metSym>
                <metSym value="w">short syllable</metSym>
                <metSym value="|">foot boundary</metSym>
                <metSym value="u">indifferens (long or short)</metSym>
                <metSym value="n">biceps (two short syllables)</metSym>
                <metSym value="x">anceps (long or short or two shorts)</metSym>
            </metDecl>
            
            <metDecl type="met" xml:id="hexameter-anaxiformis-b" pattern="ln|ln|ln|ln|ln|lu" xml:lang="en">
